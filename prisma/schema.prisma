generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  tagsCsv     String   // comma-separated tags for simplicity on SQLite
  url         String?
  repoUrl     String?
  media       Json?    // array of media items { type: 'image'|'video', src: string }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


